<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>face connect</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900">
    <a href="/auth/logout">logout</a>
    <h1 class="text-blue-400 font-bold text-2xl flex justify-center mt-10">
      Face connect
    </h1>
    <div class="flex flex-row space-x-10 mt-10 justify-center">
      <video
        id="localvideo"
        class="border-2 border-blue-400 rounded-2xl p-0 h-56"
        autoplay
        muted
      ></video>
      <video
        id="remotevideo"
        class="border-2 border-blue-400 rounded-2xl p-0 h-56"
        autoplay
      ></video>
    </div>
    <div class="flex flex-row justify-center items-center space-x-4 mt-10">
      <input
        type="text"
        id="peer_id"
        placeholder="enter the peer id"
        class="w-56 text-xs bg-gray-900 border-2 border-blue-400 p-2 rounded-3xl text-blue-400 focus:outline-none placeholder-blue-400"
      />
      <button
        id="connect_btn"
        class="bg-blue-400 text-gray-900 text-xs p-2 rounded-2xl hover:bg-gray-900 hover:text-blue-400 border-2 border-blue-400"
      >
        connect
      </button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/peerjs@1.3.2/dist/peerjs.min.js"></script>
    <script src="../public/script.js"></script>
  </body>
</html>
